<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.UdregnOmsaetning">


    <de.codecrafters.tableview.TableView
            android:id="@+id/tableView"
            android:layout_width="425dp"
            android:layout_height="272dp"
            app:tableView_columnCount="3" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintVertical_bias="0.112"/>
    <TextView
            android:text="Udregn Omsætning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titel2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.02"
            android:textStyle="bold" android:textSize="18sp"
            android:textColor="#000000"/>
    <ImageView
            android:layout_width="60dp"
            android:layout_height="25dp" app:srcCompat="@drawable/backarrow" android:id="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.044" app:layout_constraintVertical_bias="0.02"
            android:onClick="tilbageFraUdregnOmsaetning"/>
    <EditText
            android:imeOptions="actionNext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/afsaetningInput"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.08" app:layout_constraintVertical_bias="0.46"
            android:textSize="14sp" android:hint="afsætning"/>
    <EditText
            android:imeOptions="actionDone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/salgsprisInput"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.443" app:layout_constraintVertical_bias="0.46"
            android:textSize="14sp" android:hint="salgspris"/>
    <TextView
            android:text="Tilføj ny vare til omsætningen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/omsaetningText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.26" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.46"
            android:textColor="#000000"/>
    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp" app:srcCompat="@drawable/blackplus" android:id="@+id/omsaetningImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.07"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.462" android:clickable="true"
            android:onClick="tilfoejVareTilOmsaetning"/>
    <TextView
            android:text="Omsætning samlet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/omsaetningResultatText"
            android:textColor="#000000" android:textStyle="bold" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.09" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.52"/>

    <Button
            android:text="add"
            android:layout_width="63dp"
            android:layout_height="38dp" android:id="@+id/tilfoejTilOmsaetningKnap"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.954" app:layout_constraintVertical_bias="0.46"
            android:onClick="addElementToTable"/>
    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/udregnOmsaetningResultat"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.952" app:layout_constraintVertical_bias="0.52"
            android:textStyle="bold" android:textColor="#000000" android:textAlignment="viewEnd"/>


</androidx.constraintlayout.widget.ConstraintLayout>